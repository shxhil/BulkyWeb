@model Category

<form method="post">
    <div class="container">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 form-floating py-2">
            <input asp-for="Name" type="text" class="form-control border-0 shadow" /> @* db *@
            <label asp-for="Name" class="ms-2"></label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
            <label asp-for="DisplayOrder"></label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary col-sm-6 col-md-4" style="width:200px;height:55px;">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="index" class="btn btn-secondary col-sm-6 col-md-4" style="width:200px;height:55px; background-color: #6c757d; color: white;">
                    Back to  list
                </a>
            </div>
        </div>
</form>

@*   Client Side Validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}