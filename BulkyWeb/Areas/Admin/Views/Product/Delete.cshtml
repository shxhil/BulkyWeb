@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="container">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 form-floating py-2">
            <input asp-for="Title" disabled type="text" class="form-control border-0 shadow" /> @* db *@
            <label asp-for="Title" class="ms-2"></label>
        </div>

        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Description" disabled class="form-control border-0 shadow" />
            <label asp-for="Description"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
            <label asp-for="ISBN"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Author" disabled class="form-control border-0 shadow" />
            <label asp-for="Author"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
            <label asp-for="ListPrice"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price" disabled class="form-control border-0 shadow" />
            <label asp-for="Price"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price50" disabled class="form-control border-0 shadow" />
            <label asp-for="Price50"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price100" disabled class="form-control border-0 shadow" />
            <label asp-for="Price100"></label>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger col-sm-6 col-md-4" style="width:150px">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary col-sm-6 col-md-4" style="width:150px">
                    Back to  list
                </a>
            </div>
        </div>
    </div>
</form>
