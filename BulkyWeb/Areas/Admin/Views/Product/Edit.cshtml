@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="container">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 form-floating py-2">
            <input asp-for="Title" type="text" class="form-control border-0 shadow" /> @* db *@
            <label asp-for="Title" class="ms-2"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Description" class="form-control border-0 shadow" />
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="ISBN" class="form-control border-0 shadow" />
            <label asp-for="ISBN"></label>
            <span asp-validation-for="ISBN" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Author" class="form-control border-0 shadow" />
            <label asp-for="Author"></label>
            <span asp-validation-for="Author" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="ListPrice" class="form-control border-0 shadow" />
            <label asp-for="ListPrice"></label>
            <span asp-validation-for="ListPrice" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price" class="form-control border-0 shadow" />
            <label asp-for="Price"></label>
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price50" class="form-control border-0 shadow" />
            <label asp-for="Price50"></label>
            <span asp-validation-for="Price50" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Price100" class="form-control border-0 shadow" />
            <label asp-for="Price100"></label>
            <span asp-validation-for="Price100" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary col-sm-6 col-md-4" style="width:150px">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary col-sm-6 col-md-4" style="width:150px">
                    Back to  list
                </a>
            </div>
        </div>
    </div>
</form>

@*   Client Side Validation *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}           