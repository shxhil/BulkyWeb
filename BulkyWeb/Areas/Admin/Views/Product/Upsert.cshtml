@model ProductVM

<form method="post" class="row" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class="container">
        <div class="row pb-2">
            <h2 class="text-primary"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            <hr />

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 form-floating py-2">
            <input asp-for="Product.Title" type="text" class="form-control border-0 shadow" /> @* db *@
            <label asp-for="Product.Title" class="ms-2"></label>
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="mb-3  py-2">
            @* <label>Display Order</label>*@
            <label asp-for="Product.Description" class="ms-2 text-muted"></label>
            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
            <label asp-for="Product.ISBN"></label>
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.Author" class="form-control border-0 shadow" />
            <label asp-for="Product.Author"></label>
            <span asp-validation-for="Product.Author" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
            <label asp-for="Product.ListPrice"></label>
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.Price" class="form-control border-0 shadow" />
            <label asp-for="Product.Price"></label>
            <span asp-validation-for="Product.Price" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.Price50" class="form-control border-0 shadow" />
            <label asp-for="Product.Price50"></label>
            <span asp-validation-for="Product.Price50" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input asp-for="Product.Price100" class="form-control border-0 shadow" />
            <label asp-for="Product.Price100"></label>
            <span asp-validation-for="Product.Price100" class="text-danger"></span>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            <input type="file" name="file" class="form-control border-0 shadow" />
            <label asp-for="Product.ImageUrl"></label>

        </div>
        <div class="mb-3 form-floating py-2">
            @* <label>Display Order</label>*@
            @*             <select asp-for="CategoryId" asp-items=ViewBag.CategoryList class="form-control border-0 shadow">
 *@            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                <option disabled selected>--Select Category--</option>
            </select>
            <label asp-for="Product.CategoryId"></label>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.Product.Id != 0)
                {
                    <button type="submit" class="btn btn-primary col-sm-6 col-md-4" style="width:200px;height:55px;">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary col-sm-6 col-md-4" style="width:200px;height:55px;">Create</button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary col-sm-6 col-md-4" style="width:200px;height:55px; background-color: #6c757d; color: white;">
                    Back to  list
                </a>
            </div>
        </div>
</form>

