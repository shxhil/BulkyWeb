@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
   
@* model its type *@



<div class="container">
    <div class="row pt-4  pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-page="Category/Create"   class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> create New Category
            </a>
        </div>
    </div>    
  
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CatogoryList.OrderBy (u=>u.DisplayOrder))
        {
            <tr>
                <td> @obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div role="group" class="btn-group w-75">
                            <a asp-page="Category/Edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-page="Category?Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
       
    </tbody>
    

</table>
</div>
}
